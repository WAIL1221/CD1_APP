FROM node:16

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY ./package*.json ./

# Install app dependencies
RUN npm install -g @vue/cli

# Bundle app source
COPY . ./

# Set file permissions for Frontend directory
RUN chmod -R 777 .

# Expose port
EXPOSE 8080

# Start command
CMD ["npm", "run", "serve"]